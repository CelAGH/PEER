                                            $colspans_days[$c]['date'] = $day['date'][0];
                                        } else if(array_key_exists('datetime', $day)) {
                                            foreach($day['datetime'] as $d) {
                                               $colspans_days[$c]['datetime'] = $day['datetime']; 
                                            }
                                           
                                        }
 
